<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.category.capitalize %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<p><strong>Reviews</strong></p>
<div class="row">
  <% @restaurant.reviews.each do |review| %>
    <p class="col-6"><%= review.content %></p>
    <p class="col-2"><%= review.rating %></p>
  <% end %>
</div>

<p class="btn"><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>
<p class="btn"><%= link_to "Back to list", restaurants_path %></p>