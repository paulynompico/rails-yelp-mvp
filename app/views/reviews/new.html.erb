<div class="container pt-3">
  <h1>New review</h1>
  <div class="mb-3">
    <%= simple_form_for [@restaurant, @review], :html => { :class => 'form-horizontal gap-3' } do |f| %>
      <%= f.input :rating %>
      <%= f.input :content %>
      <%= f.submit "Submit review", class: "btn btn-primary mt-3" %>
    <% end %> 
  </div>
</div>
